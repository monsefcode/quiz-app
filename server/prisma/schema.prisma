generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User table
model User {
  id          Int     @id @default(autoincrement())
  username    String 
  phoneNumber String  @unique
  quizResult  QuizResult?
}

// Quiz Result table
model QuizResult {
  id       Int      @id @default(autoincrement())
  score    Int
  timing   Int
  user     User     @relation(fields: [userId], references: [id])
  userId   Int      @unique
}

